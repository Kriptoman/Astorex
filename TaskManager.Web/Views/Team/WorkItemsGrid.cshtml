@{
    ViewBag.Title = "Work items grid";
    Layout = null;
}

@using TaskManager.Infrastructure.Constants
@using TaskManager.Web.Controllers
@model IList<TaskManager.Presentation.Models.WorkItemsGridModel>

@if (Model.Count > 0)
{
    <table id="workitems-table" class="table offset-top" action="@Url.Action(Actions.GetWorkItem, WorkItemsController.Name)">
        <thead style="background-color: #e6eeee;">
            <tr>
                <th>Work item</th>
                <th>Type</th>
                <th>Title</th>
                <th>State</th>
                <th>Effort</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr style="cursor: pointer; background-color: @(i%2 == 0 ? "#FFFFFF" : "#F0F0F6")">
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Type</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].State</td>
                    <td>@Model[i].Effort</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="center-block">There is no data</h2>
}

<script type="text/javascript">
    window.workitemGrid = new WorkitemGridView()
</script>
