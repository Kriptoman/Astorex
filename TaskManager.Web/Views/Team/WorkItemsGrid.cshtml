@{
    ViewBag.Title = "Work items grid";
    Layout = null;
}

@model IList<TaskManager.Presentation.Models.WorkItemsGridModel>

@if (Model.Count > 0)
{
    <table class="table offset-top">
        <thead style="background-color: white;">
            <tr>
                <td>Work item</td>
                <td>Type</td>
                <td>Title</td>
                <td>State</td>
                <td>Effort</td>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr style="cursor: pointer; background-color: @(i%2 == 0 ? "#f0f0f0" : "#666666")">
                    <td>@Model[i].Id</td>
                    <td>@Model[i].Type</td>
                    <td>@Model[i].Title</td>
                    <td>@Model[i].State</td>
                    <td>@Model[i].Effort</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2 class="center-block">There is no data</h2>
}